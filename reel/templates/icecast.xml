<icecast>
    <location>{location}</location>
    <admin>{admin_email}</admin>
    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>
    <authentication>
        <source-password>{password}</source-password>
        <relay-password>{password}</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>{password}</admin-password>
    </authentication>
    <hostname>{hostname}</hostname>
    <listen-socket>
        <port>{port}</port>
    </listen-socket>
    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*" />
    </http-headers>
    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/local/Cellar/icecast/2.4.3/share/icecast</basedir>
        <webroot>/usr/local/Cellar/icecast/2.4.3/share/icecast/web</webroot>
        <adminroot>/usr/local/Cellar/icecast/2.4.3/share/icecast/admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>
    <logging>
        <accesslog>-</accesslog> <!-- '-' is stderr -->
        <errorlog>-</errorlog> <!-- '-' is stderr -->
        <loglevel>3</loglevel> <!-- 4 Debug, 3 Info, 2 Warn, 1 Error -->
    </logging>
    <security>
        <chroot>0</chroot>
    </security>
</icecast>
